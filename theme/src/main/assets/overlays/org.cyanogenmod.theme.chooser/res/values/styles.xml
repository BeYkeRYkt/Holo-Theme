<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/ThemeChooserActionBar</item>
        <item name="android:colorPrimary">#ff292929</item>
        <item name="android:actionBarTabTextStyle">@style/ThemeChooserActionBarTabText</item>
        <item name="android:actionMenuTextColor">#ffffff</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">false</item>

        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:textColorPrimary">@color/primary_text_color</item>
    </style>

    <style name="AppTheme.Chooser" parent="@android:style/Theme.Holo">
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="ThemeChooserActionBar" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:colorPrimary">#ff292929</item>
        <item name="android:displayOptions">useLogo|showHome|showTitle</item>
        <item name="android:background">#BB000000</item>
        <item name="android:titleTextStyle">@style/ThemeChooserActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="ThemeChooserActionBarTitleText">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- ActionBar tabs text styles -->
    <style name="ThemeChooserActionBarTabText">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- When this style was added, android:toolbarStyle was private. Therefore, this style
     must be directly applied to every toolbar -->
    <style name="ChooserToolbarStyle" parent="@android:style/Theme.Holo">
        <item name="android:background">#ff292929</item>
        <item name="android:titleTextAppearance">@style/ChooserActionBarTitleText</item>
    </style>

    <!-- Text in the action bar at the top of the screen -->
    <style name="ChooserActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>