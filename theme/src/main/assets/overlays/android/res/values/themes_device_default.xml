<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- DeviceDefault -->
    <style name="HoloTheme" parent="@android:style/Theme.Holo"/>

    <!-- Dark Device -->
    <style name="Theme.DeviceDefault" parent="@style/HoloTheme">
        <item name="android:colorAccent">@color/theme_accent</item>
        <item name="android:windowClipToOutline">true</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowEnterTransition">@android:transition/fade</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
        <item name="android:windowContentTransitions">false</item>
        <item name="android:windowActivityTransitions">true</item>

        <!-- <item name="@*android:windowActionBarFullscreenDecorLayout">@*android:layout/screen_action_bar</item> -->
        <item name="android:toolbarStyle">@style/Widget.Holo.Toolbar</item>

        <item name="@*android:preferenceFrameLayoutStyle">@*android:style/Widget.Holo.PreferenceFrameLayout</item>
        <item name="@*android:preferencePanelStyle">@style/PreferencePanel.Material</item>
        <item name="@*android:preferenceHeaderPanelStyle">@style/PreferenceHeaderPanel.Material</item>
        <item name="@*android:preferenceListStyle">@style/PreferenceHeaderList.Material</item>
        <item name="@*android:preferenceFragmentListStyle">@style/PreferenceFragmentList.Material</item>
        <item name="@*android:preferenceFragmentPaddingSide">@dimen/preference_fragment_padding_side_material</item>
    </style>
    <style name="Theme.DeviceDefault.NoActionBar" parent="@android:style/Theme.Holo.NoActionBar"/>
    <style name="Theme.DeviceDefault.NoActionBar.Fullscreen" parent="@android:style/Theme.Holo.NoActionBar.Fullscreen"/>
    <style name="Theme.DeviceDefault.NoActionBar.Overscan" parent="@android:style/Theme.Holo.NoActionBar.Overscan"/>
    <style name="Theme.DeviceDefault.NoActionBar.TranslucentDecor" parent="@android:style/Theme.Holo.NoActionBar.TranslucentDecor"/>
    <style name="Theme.DeviceDefault.Panel" parent="@android:style/Theme.Holo.Panel"/>
    <style name="Theme.DeviceDefault.DialogWhenLarge" parent="@android:style/Theme.Holo.DialogWhenLarge"/>
    <style name="Theme.DeviceDefault.DialogWhenLarge.NoActionBar" parent="@android:style/Theme.Holo.DialogWhenLarge.NoActionBar"/>
    <style name="Theme.DeviceDefault.DarkActionBar" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@android:style/Widget.Holo.ActionBar.Solid</item>
    </style>

    <style name="Theme.DeviceDefault.Dialog" parent="@*android:style/Theme.Holo.Dialog"/>
    <style name="Theme.DeviceDefault.Dialog.MinWidth" parent="@android:style/Theme.Holo.Dialog.MinWidth"/>
    <style name="Theme.DeviceDefault.Dialog.NoActionBar" parent="@android:style/Theme.Holo.Dialog.NoActionBar"/>
    <style name="Theme.DeviceDefault.Dialog.NoActionBar.MinWidth" parent="@*android:style/Theme.Holo.Dialog.NoActionBar.MinWidth"/>
    <style name="Theme.DeviceDefault.Dialog.Presentation" parent="@*android:style/Theme.Holo.Dialog.Presentation"/>
    <style name="Theme.DeviceDefault.Dialog.BaseAlert" parent="@*android:style/Theme.Holo.Dialog.BaseAlert"/>
    <style name="Theme.DeviceDefault.Dialog.Alert" parent="@*android:style/Theme.Holo.Dialog.Alert"/>
    <style name="Theme.DeviceDefault.Dialog.NoFrame" parent="@*android:style/Theme.Holo.Dialog.NoFrame"/>
    <style name="Theme.DeviceDefault.Dialog.FixedSize" parent="@*android:style/Theme.Holo.Dialog.FixedSize"/>
    <style name="Theme.DeviceDefault.Dialog.NoActionBar.FixedSize" parent="@*android:style/Theme.Holo.Dialog.NoActionBar.FixedSize"/>
    <style name="Theme.DeviceDefault.Dialog.NoActionBar.MinWidth" parent="@*android:style/Theme.Holo.Dialog.NoActionBar.MinWidth"/>

    <style name="Theme.DeviceDefault.Wallpaper" parent="@*android:style/Theme.Holo.Wallpaper"/>
    <style name="Theme.DeviceDefault.Wallpaper.NoTitleBar" parent="@*android:style/Theme.Holo.Wallpaper.NoTitleBar"/>

    <!-- InputMethod -->
    <style name="Theme.DeviceDefault.InputMethod" parent="@android:style/Theme.Holo.InputMethod"/>
    <style name="Theme.DeviceDefault.SearchBar" parent="@*android:style/Theme.Holo.SearchBar"/>

    <!-- Light Device -->
    <style name="Theme.DeviceDefault.Light" parent="@style/HoloTheme">
        <item name="android:colorAccent">@color/theme_accent</item>
        <item name="android:windowClipToOutline">true</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowEnterTransition">@android:transition/fade</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
        <item name="android:windowContentTransitions">false</item>
        <item name="android:windowActivityTransitions">true</item>

        <!-- <item name="@*android:windowActionBarFullscreenDecorLayout">@*android:layout/screen_action_bar</item> -->
