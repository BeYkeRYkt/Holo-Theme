<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Themes -->
    <style name="devTheme" parent="@android:style/Theme.Holo"></style>

    <!-- Dark Device -->
    <style name="Theme.DeviceDefault" parent="@style/devTheme">
        <item name="android:colorAccent">@color/theme_accent</item>
    </style>

    <!-- Light Device -->
    <style name="Theme.DeviceDefault.Light" parent="@style/devTheme"/>

    <style name="Theme.DeviceDefault.Dialog.MinWidth" parent="@android:style/Theme.Holo.Dialog.MinWidth"/>
    <style name="Theme.DeviceDefault.Light.Dialog.MinWidth" parent="@android:style/Theme.Holo.Dialog.MinWidth"/>

    <style name="Theme.DeviceDefault.Dialog.NoActionBar" parent="@android:style/Theme.Holo.Dialog.NoActionBar"/>
    <style name="Theme.DeviceDefault.Light.Dialog.NoActionBar" parent="@android:style/Theme.Holo.Dialog.NoActionBar"/>
    <style name="Theme.DeviceDefault.Dialog.NoActionBar.MinWidth" parent="@android:style/Theme.Holo.Dialog.NoActionBar.MinWidth"/>
    <style name="Theme.DeviceDefault.Light.Dialog.NoActionBar.MinWidth" parent="@android:style/Theme.Holo.Dialog.NoActionBar.MinWidth"/>

    <style name="Theme.DeviceDefault.NoActionBar" parent="@android:style/Theme.Holo.NoActionBar"/>
    <style name="Theme.DeviceDefault.Light.NoActionBar" parent="@android:style/Theme.Holo.NoActionBar"/>

    <style name="Theme.DeviceDefault.NoActionBar.Fullscreen" parent="@android:style/Theme.Holo.NoActionBar.Fullscreen"/>
    <style name="Theme.DeviceDefault.Light.NoActionBar.Fullscreen" parent="@android:style/Theme.Holo.NoActionBar.Fullscreen"/>

    <style name="Theme.DeviceDefault.NoActionBar.Overscan" parent="@android:style/Theme.Holo.NoActionBar.Overscan"/>
    <style name="Theme.DeviceDefault.Light.NoActionBar.Overscan" parent="@android:style/Theme.Holo.NoActionBar.Overscan"/>

    <style name="Theme.DeviceDefault.NoActionBar.TranslucentDecor" parent="@android:style/Theme.Holo.NoActionBar.TranslucentDecor"/>
    <style name="Theme.DeviceDefault.Light.NoActionBar.TranslucentDecor" parent="@android:style/Theme.Holo.NoActionBar.TranslucentDecor"/>

    <style name="Theme.DeviceDefault.Panel" parent="@android:style/Theme.Holo.Panel"/>
    <style name="Theme.DeviceDefault.Light.Panel" parent="@android:style/Theme.Holo.Panel"/>

    <style name="Theme.DeviceDefault.DialogWhenLarge" parent="@android:style/Theme.Holo.DialogWhenLarge"/>
    <style name="Theme.DeviceDefault.Light.DialogWhenLarge" parent="@android:style/Theme.Holo.DialogWhenLarge"/>
    <style name="Theme.DeviceDefault.DialogWhenLarge.NoActionBar" parent="@android:style/Theme.Holo.DialogWhenLarge.NoActionBar"/>
    <style name="Theme.DeviceDefault.Light.DialogWhenLarge.NoActionBar" parent="@android:style/Theme.Holo.DialogWhenLarge.NoActionBar"/>

    <style name="Theme.DeviceDefault.DarkActionBar" parent="@style/devTheme"/>
    <style name="Theme.DeviceDefault.Light.DarkActionBar" parent="@style/devTheme"/>

    <style name="Theme.DeviceDefault.Dialog.Presentation" parent="@*android:style/Theme.Holo.Dialog.Presentation"/>
    <style name="Theme.DeviceDefault.Light.Dialog.Presentation" parent="@*android:style/Theme.Holo.Dialog.Presentation"/>

    <!-- Use common -->
    <style name="Theme.DeviceDefault.Dialog" parent="@*android:style/Theme.Holo.Dialog"/>
    <style name="Theme.DeviceDefault.Light.Dialog" parent="@*android:style/Theme.Holo.Dialog"/>

    <style name="Theme.DeviceDefault.Dialog.Alert" parent="@*android:style/Theme.Holo.Dialog.Alert"/>
    <style name="Theme.DeviceDefault.Light.Dialog.Alert" parent="@*android:style/Theme.Holo.Dialog.Alert"/>

    <style name="Theme.DeviceDefault.Dialog.NoFrame" parent="@*android:style/Theme.Holo.Dialog.NoFrame"/>
    <style name="Theme.DeviceDefault.Light.Dialog.NoFrame" parent="@*android:style/Theme.Holo.Dialog.NoFrame"/>

    <!-- Notifications -->
    <style name="TextAppearance.Material.Notification" parent="@android:style/TextAppearance.Material.Notification">
        <item name="android:textColor">@color/theme_white</item>
    </style>

    <style name="TextAppearance.Material.Notification.Title" parent="@android:style/TextAppearance.Material.Notification.Title">
        <item name="android:textColor">@color/theme_white</item>
    </style>

    <style name="TextAppearance.Material.Notification.Line2" parent="@android:style/TextAppearance.Material.Notification.Line2">
        <item name="android:textColor">@color/theme_white</item>
    </style>

    <style name="TextAppearance.Material.Notification.Info" parent="@android:style/TextAppearance.Material.Notification.Info">
        <item name="android:textColor">@color/theme_white</item>
    </style>

    <style name="TextAppearance.Material.Notification.Time" parent="@android:style/TextAppearance.Material.Notification.Time">
        <item name="android:textColor">@color/theme_white</item>
    </style>

    <style name="TextAppearance.Material.Notification.Emphasis" parent="@android:style/TextAppearance.Material.Notification.Emphasis">
        <item name="android:textColor">@color/theme_white</item>
    </style>

    <style name="TextAppearance.Material.Widget.ActionBar.Menu" parent="@android:style/TextAppearance.Material.Menu">
        <item name="android:textColor">@color/theme_white</item>
    </style>

    <!-- Settings -->
    <style name="Theme.DeviceDefault.Settings" parent="@android:style/Theme.Holo"></style>

    <style name="Theme.DeviceDefault.Settings.CompactMenu" parent="@style/Theme.DeviceDefault.Settings"></style>

    <style name="Theme.DeviceDefault.Settings.BaseDialog" parent="@style/Theme.DeviceDefault.Dialog"></style>

    <style name="Theme.DeviceDefault.Settings.Dialog" parent="@style/Theme.DeviceDefault.Settings.BaseDialog"></style>

    <!-- InputMethod -->
    <style name="Theme.DeviceDefault.InputMethod" parent="@android:style/Theme.Holo.InputMethod"/>

    <!-- SearchBar -->
    <style name="Theme.DeviceDefault.SearchBar" parent="@*android:style/Theme.Holo.SearchBar"/>
    <style name="Theme.DeviceDefault.Light.SearchBar" parent="@*android:style/Theme.Holo.SearchBar"/>

    <!-- Theme used for the intent picker activity. -->
    <style name="Theme.DeviceDefault.Resolver" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorControlActivated">?android:attr/colorControlHighlight</item>
        <!-- <item name="android:listPreferredItemPaddingStart">?android:attr/dialogPreferredPadding</item>
        <item name="android:listPreferredItemPaddingEnd">?android:attr/dialogPreferredPadding</item> -->
    </style>
</resources>